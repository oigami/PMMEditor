<UserControl
  x:Class="PMMEditor.Views.MMW.Documents.MainCameraView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:documents="clr-namespace:PMMEditor.ViewModels.Documents"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:graphics="clr-namespace:PMMEditor.ViewModels.Graphics" 
  xmlns:graphics1="clr-namespace:PMMEditor.Views.Graphics"
  d:DataContext="{d:DesignInstance graphics:MainRenderViewModel}"
  d:DesignHeight="300"
  d:DesignWidth="300"
  mc:Ignorable="d">
  <Grid>

    <graphics1:MmdModelItemsControl
      Device="{Binding Device}"
      ItemsSource="{Binding Items}">
      <graphics1:MmdModelItemsControl.ItemsPanel>
        <ControlTemplate>
          <graphics1:MainRenderer
            D3DHeight="600"
            D3DWidth="800"
            Stretch="Uniform" 
            VerticalAlignment="Center"/>
        </ControlTemplate>
      </graphics1:MmdModelItemsControl.ItemsPanel>
    </graphics1:MmdModelItemsControl>

  </Grid>
</UserControl>



