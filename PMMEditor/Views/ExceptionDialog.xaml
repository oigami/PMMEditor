<Window
  x:Class="PMMEditor.Views.ExceptionDialog"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:PMMEditor.Views"
  xmlns:log="clr-namespace:PMMEditor.Log"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="{Binding Level.Name}"
  Width="640"
  Height="480"
  d:DataContext="{d:DesignInstance log:LogMessage}"
  mc:Ignorable="d">
  <DockPanel>
    <TextBlock
      Margin="5"
      DockPanel.Dock="Top"
      Text="{Binding Message}" />

    <GroupBox
      Margin="5"
      Header="Exception">
      <DockPanel>

        <DockPanel DockPanel.Dock="Top">
          <TextBlock
            Margin="5"
            Text="Message: " />
          <TextBlock
            Margin="5"
            DockPanel.Dock="Right"
            Text="{Binding Exception.Message}" />
        </DockPanel>

        <TextBlock
          Margin="5,15,5,0"
          DockPanel.Dock="Top"
          Text="StackTrace" />

        <ScrollViewer
          HorizontalScrollBarVisibility="Visible"
          VerticalScrollBarVisibility="Visible">
          <TextBox
            Margin="5"
            BorderThickness="0"
            IsReadOnly="True"
            Text="{Binding Exception.StackTrace, Mode=OneTime}" />
        </ScrollViewer>
      </DockPanel>
    </GroupBox>
  </DockPanel>
</Window>
