<UserControl
  x:Class="PMMEditor.Views.Documents.MainCameraView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:documents="clr-namespace:PMMEditor.ViewModels.Documents"
  xmlns:local="clr-namespace:PMMEditor.Views.Documents"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DataContext="{d:DesignInstance documents:MainRenderViewModel}"
  d:DesignHeight="300"
  d:DesignWidth="300"
  mc:Ignorable="d">
  <Grid>

    <local:MmdModelItemsControl
      Device="{Binding Device}"
      ItemsSource="{Binding Items}">
      <local:MmdModelItemsControl.ItemsPanel>
        <ControlTemplate>
          <local:MainRenderer
            D3DHeight="600"
            D3DWidth="800"
            Stretch="Uniform" 
            VerticalAlignment="Center"/>
        </ControlTemplate>
      </local:MmdModelItemsControl.ItemsPanel>
    </local:MmdModelItemsControl>

  </Grid>
</UserControl>
