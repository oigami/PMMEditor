<UserControl
  x:Class="PMMEditor.Views.MMD.BoneManipulation"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:PMMEditor.Views.MMD"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="300"
  d:DesignWidth="300"
  mc:Ignorable="d">
  <StackPanel>
    <CheckBox
      Margin="5"
      HorizontalAlignment="Center"
      Content="Bone Manipulation" />
    <UniformGrid Columns="3">
      <ToggleButton
        Margin="5"
        Content="select" />
      <ToggleButton
        Margin="5"
        Content="rotate" />
      <ToggleButton
        Margin="5"
        Content="move" />
      <ToggleButton
        Margin="5"
        Content="box-select" />
      <Button
        Margin="5"
        Content="aelect all" />
      <Button
        Margin="5"
        Content="unregisted" />
      <Button
        Margin="5"
        Content="copy" />
      <Button
        Margin="5"
        Content="paste" />
      <Button
        Margin="5"
        Content="reverse" />
      <Button
        Margin="5"
        Content="register" />
      <Button
        Margin="5"
        Content="reset" />
      <ToggleButton
        Margin="5"
        Content="physics" />
    </UniformGrid>
  </StackPanel>
</UserControl>

