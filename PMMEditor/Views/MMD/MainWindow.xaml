<Window
  x:Class="PMMEditor.Views.MMD.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:documents="clr-namespace:PMMEditor.Views.Documents"
  xmlns:local="clr-namespace:PMMEditor.Views.MMD"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:mmd="clr-namespace:PMMEditor.ViewModels.MMD"
  Title="MainWindow"
  Width="800"
  Height="600"
  d:DataContext="{d:DesignInstance mmd:MainWindowViewModel}"
  mc:Ignorable="d">
  <DockPanel>
    <Menu DockPanel.Dock="Top">
      <MenuItem Header="Help" />
    </Menu>
    <StackPanel
      DockPanel.Dock="Bottom"
      Orientation="Horizontal">
      <local:ModelManipulation />
      <local:BoneManipulation />
      <local:FacialManipulation />
      <local:ViewAndPlay />
    </StackPanel>
    <Grid DockPanel.Dock="Top">
      <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <documents:TimelineView Grid.Column="0" />
      <documents:MainRenderer Grid.Column="1" />
    </Grid>

  </DockPanel>
</Window>
