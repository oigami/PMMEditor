<UserControl
  x:Class="PMMEditor.Views.MMD.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:graphics="clr-namespace:PMMEditor.Views.Graphics"
  xmlns:local="clr-namespace:PMMEditor.Views.MMD"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:mmd="clr-namespace:PMMEditor.ViewModels.MMD"
  xmlns:timeline="clr-namespace:PMMEditor.Views.Timeline"
  d:DataContext="{d:DesignInstance mmd:MainViewViewModel}"
  d:DesignHeight="600"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <DockPanel>
    <Menu DockPanel.Dock="Top">
      <MenuItem Header="Help" />
    </Menu>
    <StackPanel
      DockPanel.Dock="Bottom"
      Orientation="Horizontal">
      <local:ModelManipulation />
      <local:BoneManipulation />
      <local:FacialManipulation />
      <local:ViewAndPlay />
    </StackPanel>
    <Grid DockPanel.Dock="Top">
      <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition Width="5" />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <local:Timeline
        Grid.Column="0"
        DataContext="{Binding TimelineViewModel, Mode=OneWay}" />
      <GridSplitter
        Grid.Column="1"
        HorizontalAlignment="Stretch" />
      <local:RenderView
        Grid.Column="2"
        DataContext="{Binding}" />
    </Grid>

  </DockPanel>
</UserControl>
